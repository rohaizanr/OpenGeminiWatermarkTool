# Environment Configuration
# COPY this file to .env and fill in your values

# Application Environment (development, production)
APP_ENV=development

# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# CORS Settings - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=your_cloudflare_secret_key_here
# For development testing, use: 1x0000000000000000000000000000000AA

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_ENABLED=true

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=png,jpg,jpeg,webp
EPHEMERAL_RETENTION_HOURS=1

# Storage Paths
UPLOAD_DIR=/tmp/uploads
OUTPUT_DIR=/tmp/outputs

# Binary Configuration
BINARY_PATH=/app/bin/GeminiWatermarkTool
BINARY_TIMEOUT_SECONDS=30

# Logging
LOG_FORMAT=json

